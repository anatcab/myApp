<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:fApp.Games.MusicCounter"
             x:Class="fApp.Games.MusicCounter.MusicCounterGamePage"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="18" Spacing="14">

        <Grid ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto"
              Margin="0,10,0,10">

            <Button Grid.Column="0"
                    Text="{x:Static local:MusicCounterResources.Game_End}"
                    WidthRequest="76"
                    HeightRequest="76"
                    CornerRadius="999"
                    Padding="0"
                    FontSize="24"
                    BackgroundColor="{StaticResource ButtonColor}"
                    TextColor="{StaticResource White}"
                    Command="{Binding EndCommand}" />

            <Border Grid.Column="1"
                    WidthRequest="160"
                    HeightRequest="160"
                    StrokeThickness="0"
                    BackgroundColor="{StaticResource SpecialColor}"
                    StrokeShape="RoundRectangle 999"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Label Text="{Binding GlobalCount}"
                       FontSize="88"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       TextColor="{StaticResource White}" />
            </Border>

            <VerticalStackLayout Grid.Column="2"
                                 Spacing="10"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center">

                <Button Text="{x:Static local:MusicCounterResources.Game_Reset}"
                        WidthRequest="76"
                        HeightRequest="76"
                        CornerRadius="999"
                        Padding="0"
                        FontSize="26"
                        BackgroundColor="{StaticResource ButtonColor}"
                        TextColor="{StaticResource White}"
                        Command="{Binding ResetCommand}" />

                <Border WidthRequest="76"
                        HeightRequest="50"
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource ButtonColor}"
                        StrokeShape="RoundRectangle 999">
                    <Label Text="{Binding ResetCount}"
                           FontSize="22"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource White}" />
                </Border>

            </VerticalStackLayout>
        </Grid>

        <Button Text="Random"
                HeightRequest="66"
                CornerRadius="18"
                Command="{Binding DrawAnyCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button" Binding="{Binding CanDrawAny}" Value="False">
                    <Setter Property="BackgroundColor" Value="{StaticResource InactiveColor}" />
                </DataTrigger>
            </Button.Triggers>
        </Button>

        <CollectionView ItemsSource="{Binding CategoryDrawButtons}"
                        SelectionMode="None"
                        HorizontalOptions="Fill">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding DisplayName}"
                            HeightRequest="46"
                            CornerRadius="18"
                            Padding="12,8"
                            FontSize="16"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MusicCounterGameViewModel}}, Path=DrawFromCategoryCommand}"
                            CommandParameter="{Binding .}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsExhausted}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource InactiveColor}" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <BoxView HeightRequest="1"
                 BackgroundColor="{StaticResource White}"
                 Opacity="0.35"
                 Margin="0,8,0,6" />

        <CollectionView ItemsSource="{Binding Phrases}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="12"
                                 VerticalItemSpacing="12" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Source={RelativeSource AncestorType={x:Type local:MusicCounterGameViewModel}}, Path=CountPhraseCommand}"
                            CommandParameter="{Binding .}"
                            Padding="14,12"
                            CornerRadius="18">
                        <Button.Text>
                            <MultiBinding StringFormat="{}{0}  {1} ({2})">
                                <Binding Path="DisplayText" />
                                <Binding Path="CurrentCount" />
                                <Binding Path="TotalCount" />
                            </MultiBinding>
                        </Button.Text>
                    </Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
