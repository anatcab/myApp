<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:fApp.Games.EndureIntervals"
             x:Class="fApp.Games.EndureIntervals.EndureIntervalsStatsPage"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="24"
          RowDefinitions="Auto,Auto,*,Auto"
          RowSpacing="4">

        <Image Grid.Row="0"
               Source="smoke_logo.svg"
               HeightRequest="200"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               Margin="0,2,0,0" />

        <Label Grid.Row="1"
               Text="{x:Static local:EndureIntervalsResources.Stats_Title}"
               FontSize="52"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,6" />

        <VerticalStackLayout Grid.Row="2"
                             Spacing="12"
                             VerticalOptions="Start"
                             HorizontalOptions="Fill">

            <Border StrokeThickness="0"
                    BackgroundColor="{StaticResource ButtonColor}"
                    StrokeShape="RoundRectangle 18"
                    Padding="16,14">

                <Grid ColumnDefinitions="*,Auto"
                      ColumnSpacing="14">
                    <Label Text="{x:Static local:EndureIntervalsResources.Stats_Timer1_MaxRepeatsReached}"
                           FontSize="30"
                           HorizontalTextAlignment="Start" />
                    <Label Grid.Column="1"
                           Text="{Binding Timer1MaxRepeatsReachedText}"
                           FontSize="30"
                           HorizontalTextAlignment="End" />
                </Grid>

            </Border>

            <Border StrokeThickness="0"
                    BackgroundColor="{StaticResource ButtonColor}"
                    StrokeShape="RoundRectangle 18"
                    Padding="16,14"
                    IsVisible="{Binding IsTimer2Visible}">

                <VerticalStackLayout Spacing="10">

                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="14">
                        <Label Text="{x:Static local:EndureIntervalsResources.Stats_Timer2_SequenceCount}"
                               FontSize="30"
                               HorizontalTextAlignment="Start" />
                        <Label Grid.Column="1"
                               Text="{Binding Timer2SequenceCountText}"
                               FontSize="30"
                               HorizontalTextAlignment="End" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="14">
                        <Label Text="{x:Static local:EndureIntervalsResources.Stats_Timer2_DelayAfter2Sum}"
                               FontSize="30"
                               HorizontalTextAlignment="Start" />
                        <Label Grid.Column="1"
                               Text="{Binding Timer2DelayAfter2SumText}"
                               FontSize="30"
                               HorizontalTextAlignment="End" />
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="14">
                        <Label Text="{x:Static local:EndureIntervalsResources.Stats_Timer2_BaseAfter3Sum}"
                               FontSize="30"
                               HorizontalTextAlignment="Start" />
                        <Label Grid.Column="1"
                               Text="{Binding Timer2BaseAfter3SumText}"
                               FontSize="30"
                               HorizontalTextAlignment="End" />
                    </Grid>

                </VerticalStackLayout>

            </Border>

        </VerticalStackLayout>

        <Button Grid.Row="3"
                Text="{x:Static local:EndureIntervalsResources.Stats_Back}"
                WidthRequest="128"
                HeightRequest="128"
                CornerRadius="999"
                BackgroundColor="{StaticResource SpecialColor}"
                TextColor="{StaticResource White}"
                FontSize="32"
                HorizontalOptions="Center"
                Margin="0,28,0,0"
                Command="{Binding BackCommand}" />

    </Grid>
</ContentPage>
