<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:fApp"
             x:Class="fApp.GamesListPage">

    <VerticalStackLayout Padding="24"
                         Spacing="18"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">

        <Image Source="suc_logo.svg"
               HeightRequest="220"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               Margin="0,8,0,12" />


        <Label Text="{x:Static local:AppResources.GamesListPrompt}" />

        <CollectionView ItemsSource="{Binding Games}"
                        SelectionMode="None"
                        HorizontalOptions="Center">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="14" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding DisplayName}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:GamesListViewModel}}, Path=SelectGameCommand}"
                            CommandParameter="{Binding .}"
                            WidthRequest="280" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
