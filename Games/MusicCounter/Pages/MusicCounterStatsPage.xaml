<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:fApp.Games.MusicCounter"
             x:Class="fApp.Games.MusicCounter.MusicCounterStatsPage"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="24"
          RowDefinitions="*,Auto"
          RowSpacing="18">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="16"
                                 Padding="0,0,0,40">

                <Label Text="{x:Static local:MusicCounterResources.Stats_Title}"
                       FontSize="52" />

                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Segments}"
                                     Spacing="10">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="0"
                                    BackgroundColor="{StaticResource ButtonColor}"
                                    StrokeShape="RoundRectangle 18"
                                    Padding="16,12">
                                <Label FontSize="32"
                                       FontFamily="Allura">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Index}" FontFamily="Allura" />
                                            <Span Text=" - " FontFamily="Allura" />
                                            <Span Text="{Binding Total}" FontFamily="Allura" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <BoxView HeightRequest="1"
                         BackgroundColor="{StaticResource White}"
                         Opacity="0.35"
                         Margin="0,10,0,8" />

                <Button Text="{Binding PhraseTotalsHeaderText}"
                        CornerRadius="18"
                        HeightRequest="62"
                        FontSize="26"
                        Command="{Binding TogglePhraseTotalsCommand}" />

                <VerticalStackLayout IsVisible="{Binding IsPhraseTotalsExpanded}"
                                     BindableLayout.ItemsSource="{Binding PhraseTotals}"
                                     Spacing="10">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="0"
                                    BackgroundColor="{StaticResource ButtonColor}"
                                    StrokeShape="RoundRectangle 18"
                                    Padding="16,12">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding Phrase}"
                                           FontSize="26"
                                           FontFamily="Allura"
                                           HorizontalTextAlignment="Start" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Total}"
                                           FontSize="26"
                                           FontFamily="Allura"
                                           HorizontalTextAlignment="End" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="1"
                Text="{x:Static local:MusicCounterResources.Stats_Back}"
                WidthRequest="128"
                HeightRequest="128"
                CornerRadius="999"
                BackgroundColor="{StaticResource SpecialColor}"
                TextColor="{StaticResource White}"
                FontSize="26"
                HorizontalOptions="Center"
                Command="{Binding BackCommand}" />

    </Grid>
</ContentPage>
