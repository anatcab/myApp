<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:fApp.Games.MusicCounter"
             x:Class="fApp.Games.MusicCounter.MusicCounterGamePage"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="18" Spacing="14">

        <Grid ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto"
              Margin="0,10,0,10">

            <Button Grid.Column="0"
                    Text="{x:Static local:MusicCounterResources.Game_End}"
                    WidthRequest="76"
                    HeightRequest="76"
                    CornerRadius="999"
                    Padding="0"
                    FontSize="22"
                    BackgroundColor="{StaticResource ButtonColor}"
                    TextColor="{StaticResource White}"
                    Command="{Binding EndCommand}" />

            <Border Grid.Column="1"
                    WidthRequest="160"
                    HeightRequest="160"
                    StrokeThickness="0"
                    BackgroundColor="{StaticResource SpecialColor}"
                    StrokeShape="RoundRectangle 999"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Label Text="{Binding GlobalCount}"
                       FontSize="88"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       TextColor="{StaticResource White}" />
            </Border>

            <VerticalStackLayout Grid.Column="2"
                                 Spacing="10"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center">

                <Button Text="{x:Static local:MusicCounterResources.Game_Reset}"
                        WidthRequest="76"
                        HeightRequest="76"
                        CornerRadius="999"
                        Padding="0"
                        FontSize="26"
                        BackgroundColor="{StaticResource ButtonColor}"
                        TextColor="{StaticResource White}"
                        Command="{Binding ResetCommand}" />

                <Border WidthRequest="76"
                        HeightRequest="50"
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource ButtonColor}"
                        StrokeShape="RoundRectangle 999">
                    <Label Text="{Binding ResetCount}"
                           FontSize="22"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource White}" />
                </Border>

            </VerticalStackLayout>
        </Grid>

        <Grid ColumnDefinitions="120,*,120"
              ColumnSpacing="12"
              VerticalOptions="Center">

            <Image Grid.Column="0"
                   Source="spades_small.svg"
                   HeightRequest="100"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Button Grid.Column="1"
                    Text="Random"
                    HeightRequest="66"
                    CornerRadius="18"
                    FontSize="28"
                    Padding="18,0"
                    HorizontalOptions="Fill"
                    Command="{Binding DrawAnyCommand}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding CanDrawAny}" Value="False">
                        <Setter Property="BackgroundColor" Value="{StaticResource InactiveColor}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Image Grid.Column="2"
                   Source="spades_small.svg"
                   HeightRequest="100"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

        </Grid>

        <CollectionView ItemsSource="{Binding CategoryDrawButtons}"
                        SelectionMode="None"
                        HorizontalOptions="Fill">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="{Binding CategoryButtonsSpan}"
                                 HorizontalItemSpacing="10"
                                 VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding DisplayName}"
                            HeightRequest="46"
                            CornerRadius="18"
                            Padding="12,8"
                            FontSize="16"
                            HorizontalOptions="Fill"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MusicCounterGameViewModel}}, Path=DrawFromCategoryCommand}"
                            CommandParameter="{Binding .}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsExhausted}" Value="True">
                                <Setter Property="BackgroundColor" Value="{StaticResource InactiveColor}" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <BoxView HeightRequest="1"
                 BackgroundColor="{StaticResource White}"
                 Opacity="0.35"
                 Margin="0,8,0,6" />

        <CollectionView ItemsSource="{Binding Phrases}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="12"
                                 VerticalItemSpacing="12" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeThickness="0"
                            BackgroundColor="{StaticResource ButtonColor}"
                            StrokeShape="RoundRectangle 18"
                            Padding="14,12"
                            HeightRequest="132">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:MusicCounterGameViewModel}}, Path=CountPhraseCommand}"
                                                  CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>

                        <Grid RowDefinitions="*,Auto"
                              RowSpacing="10">

                            <Label Text="{Binding DisplayText}"
                                   FontSize="26"
                                   TextColor="{StaticResource White}"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />

                            <Border Grid.Row="1"
                                    StrokeThickness="0"
                                    BackgroundColor="{StaticResource SelectedColor}"
                                    StrokeShape="RoundRectangle 999"
                                    HeightRequest="46"
                                    WidthRequest="86"
                                    HorizontalOptions="Center"
                                    Padding="0">
                                <Label Text="{Binding CurrentCount}"
                                       FontSize="28"
                                       TextColor="{StaticResource White}"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center" />
                            </Border>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
